<h2>Our Pets</h2>
<ul class="list-unstyled">
    {{#each pets}}
    <li class="pt-2 pb-2">
        <div class="card pt-2 pb-2" style="width: 18rem;">
            <img class="card-img" src="/images/{{this.img}}">
            <h5 class="card-header">{{this.name}}</h5>
            <div class="card-body">
                {{#if this.breed}}
                <h5 class="card-title">{{this.type}} ({{this.breed}})</h5>
                {{else}}
                <h5 class="card-title">{{this.type}}</h5>
                {{/if}}
                <a href="/pets/{{this.id}}" class="btn btn-primary">Read More</a>
            </div>
        </div>
    </li>
    {{/each}}
</ul>