<h2>Register</h2>

<form id="registerForm">
  <div class="form-group">
    <label class="form-control" for="username">Username:</label>
    <input class="form-control" type="text" id="username" name="username" required>
  </div>

  <div class="form-group">
    <label class="form-control" for="first">First Name:</label>
    <input class="form-control" type="text" id="first" name="first" required>
  </div>

  <div class="form-group">
    <label class="form-control" for="last">Last Name:</label>
    <input class="form-control" type="text" id="last" name="last" required>
  </div>

  <div class="form-group">
    <label class="form-control" for="email">Email</label>
    <input class="form-control" type="text" id="email" name="email" required>
  </div>

  <div class="form-group">
    <label class="form-control" for="password">Password</label>
    <input class="form-control" type="password" id="password" name="password" minlength="8" required>
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">Register</button>
    <a class="btn btn-primary" href="/auth/login">Login</a>
  </div>
</form>

<script type="text/javascript" src="/javascripts/register.js"></script>